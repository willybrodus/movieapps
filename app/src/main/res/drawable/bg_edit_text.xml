<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <!-- This is the line -->
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/gainsboro" />
                    <padding android:bottom="@dimen/space_half" android:top="@dimen/space" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <!-- This is the line -->
            <item android:left="-3dp" android:right="-3dp" android:top="-3dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="@color/black" />
                    <padding android:bottom="@dimen/space_half" android:top="@dimen/space" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <!-- This is the line -->
            <item android:left="-3dp" android:right="-3dp" android:top="-3dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="@color/black" />
                    <padding android:bottom="@dimen/space_half" android:top="@dimen/space" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- This is the line -->
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/gainsboro" />
                    <padding android:bottom="@dimen/space_half" android:top="@dimen/space" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>