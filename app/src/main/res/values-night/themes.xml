<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/onyx</item>
        <item name="colorPrimaryDark">@color/onyx</item>
        <item name="colorAccent">@color/onyx</item>
        <item name="colorControlActivated">@color/onyx</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:navigationBarColor">@color/onyx</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white</item>
        <item name="buttonStyle">@style/Widget.Button.PrimaryButton</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <style name="TextAppearance.App.TextView.Toolbar" parent="@style/TextAppearance.App.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="TextAppearance.App.TextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@drawable/edit_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/manatee</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <!--Start of Text Font Style-->

    <style name="TextAppearance.App.TextView.H5.White" parent="@style/TextAppearance.App.TextView">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextAppearance.App.TextView.H5.White.Bold" parent="@style/TextAppearance.App.TextView.H5.White">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/GoogleSans-Bold.ttf</item>
    </style>

    <style name="TextAppearance.App.TextView.Bold" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/onyx</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/GoogleSans-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.TextView.Bold.Big" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/onyx</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/GoogleSans-Bold.ttf</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="TextAppearance.App.TextView.Normal" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/onyx</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--End of Text Font Style-->


    <style name="Widget.Button.PrimaryButton" parent="Widget.Button.Oval"/>

    <style name="Widget.Button.Oval" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_oval_secondary</item>
        <item name="android:height">@dimen/space_x7</item>
        <item name="android:minHeight">@dimen/space_x7</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--alaret dialog theme-->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/medium_electric_blue</item>
        <item name="android:textColorPrimary">@color/onyx</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--Bottom Navigation-->
    <style name="AppTheme.BaseMaterial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/Widget.Button.PrimaryButton</item>
        <item name="buttonStyle">@style/Widget.Button.PrimaryButton</item>
        <item name="editTextStyle">@style/Widget.EditText</item>
        <item name="android:editTextStyle">@style/Widget.EditText</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransitionFromLeft</item>
    </style>

    <style name="WindowAnimationTransitionFromLeft">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


</resources>